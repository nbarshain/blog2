<h1>Listing articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th>Comments</th>
		<th colspan="3"></th>
	</tr>

	<% @articles.each do |a| %>
		<tr>
			<td><%= a.title %></td>
			<td><%= a.text %></td>
			<td><%= a.comments.count %></td>
			<td><%= link_to 'Show', article_path(a) %></td>
			<td><%= link_to 'Edit', edit_article_path(a) %></td>
			<td><%= link_to 'Destroy', article_path(a), 
					method: :delete,
					data: {confirm: 'Are you sure?'} %></td>
		</tr>
	<% end %>
</table>
<br>

<%= link_to 'New Article', new_article_path %> <br>
