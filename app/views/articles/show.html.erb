<h1>Article</h1>

<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>

<br>
<h2>Comments</h2>
<p>******************************</p>
<%= render @article.comments %>

<% if @article.comments.count != 0 %>
	<%= link_to 'Destroy All Comments', {controller: 'comments', action: 'destroy_all', 
		id: @article}, method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit Article', edit_article_path(@article) %> |
<%= link_to 'Destroy Article', [@article], method: 'delete', data: {confirm: 'Are you sure?'} %>
<br>
<%= link_to 'Articles Home', articles_path %> |
<%= link_to 'Blog Home', controller: 'welcome' %>

